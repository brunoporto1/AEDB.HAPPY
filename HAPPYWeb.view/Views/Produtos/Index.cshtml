@model IEnumerable<HAPPYWeb.model.Tbprodutos>

@{
    ViewData["Title"] = "Produtos";
    //Layout = " Inicia nesse layout ";
}
<div class="text-center">
<h1><strong>Lista de produtos</strong></h1>
</div>

<p>
    <a asp-action="Create"> Registrar produto </a> 
</p>
<hr class="divider">
<table class="table table-striped table-responsive table-bordered ">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                Código da marca
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarcaNavigation.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidade)
            </td>
          @*  <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarcaNavigation.Descricao)
            </td>
            <td class="text-center">        
                <a asp-action="Edit" asp-route-id="@item.Id">Alterar</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
